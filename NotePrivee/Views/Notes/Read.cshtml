@model NotePrivee.Models.Note

@{
    ViewData["Title"] = "Read";
}

@section Head {
    <link href="~/lib/highlightjs/styles/vs2015.css" rel="stylesheet" />
}
<hr />

@if (Model == null)
{
    <div class="alert alert-danger" role="alert">
        Impossible d'accéder à cette note.
    </div>
}
else
{
    @if (Model.NombreVue == 0)
    {
        <div class="alert alert-warning" role="alert">
            Cette note a été détruite. Si vous deviez la garder, copiez - la.
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            Cette note peut encore être consultée @Model.NombreVue fois.
        </div>
    }

    <div class="card">
        <div class="card-header">
            Note
        </div>
        <div class="card-body">
            <blockquote class="blockquote mb-0">
                @Html.Raw(@Model.Contenu)
                <footer class="blockquote-footer">@Model.DateCreation</footer>
            </blockquote>
        </div>
    </div>
}


@section Scripts {
    <script src="~/lib/highlightjs/highlight.pack.js"></script>
    <script>hljs.initHighlightingOnLoad();</script>
}
